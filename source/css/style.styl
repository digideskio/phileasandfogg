#bg
  background-image url('/img/bg.png')
  background-position center center
  background-repeat no-repeat
  width 1226px
  height 785px
  margin-top -150px
  left 50%
  margin-left -613px
  position relative
  #map
    image '/img/map-shadow.png'
    background-repeat no-repeat
    background-position bottom center
    padding-left 49px
    background-size contain !important
    width 738px
    height 425px
    left 50%
    margin-left -369px
    position absolute
    top 185px
    perspective 1000px

    #map-a
      width 197px
      height 296px
      position absolute
      left 49px
      top 0
      background-size contain !important
      transform rotateY(30deg) scale(0.95) rotate(-2deg) translateX(43px) translateY(12px)
      transform-origin 100% 0
      image '/img/map-a.png'

    #map-b
      width (312px / 2)
      height (570px / 2)
      position absolute
      left: 165px + 49px
      top: 12px;
      background-size contain !important

      transform-origin: 100% 0
      transform rotateY(-40deg) translateX(0px)

      image '/img/map-b.png'

    #map-c
      width (336px / 2)
      height (570px / 2)
      position absolute
      left: 319px + 49px
      top: 12px;
      background-size contain !important
      transform-origin: 0 0
      image '/img/map-c.png'

      transform rotateY(40deg) translateX(0px)
      transform-origin 0 0

    #map-d
      width (392px / 2)
      height (596px / 2)
      position absolute
      left: 457px + 49px
      top: -1px;
      background-size contain !important
      image '/img/map-d.png'

      transform-origin -50% 50%
      transform rotateY(-40deg) translateX(-16px) scale(0.85) translateY(6px) rotate(1deg)

    #balloon-outside
      position relative
      width 92px
      height 196px
      transform translate(40px, 20px)
      &.move
        transition all 50s ease-out
      #balloon
        width 92px
        height 110px
        image '/img/balloon.png'
        background-size contain !important
        animation float 5s linear 0s infinite
        background-repeat no-repeat
      #shadow
        display none
        width 127px
        height 70px
        position absolute
        bottom 0px
        left -10px
        background-image url('/img/shadow.png')
        animation float 5s linear 0s infinite

.opened #bg #map
  #map-a, #map-b, #map-c, #map-d
    transform scale(1)
    transition 1.7s ease-out

@keyframes bounce
  from
    transform translate(0, 0px)
  40%
    transform translate(0, -5px)
  80%
    transform translate(0, 5px)
    color #fff
  100%
    transform translate(0, 0px)
    top 0px
    color #fff

@keyframes float
  from
    transform translate3D(0, 0px, 0)
  57%
    transform translate3D(0, 13px, 0)
  100%
    transform translate3D(0, -0px, 0)

@keyframes pulse
  from
    transform scale(0.8)
  57%
    transform scale(1.3)
  100%
    transform scale(0.8)



